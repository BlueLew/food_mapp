<div>
  <h1 class= "text-chicle"><%= current_user.name %>'s Profile Page</h1>
  <% if current_user.avatar.attached? %>
    <h4 class= "nav_avatar"><%= image_tag current_user.avatar.variant(resize: "150 x 200")%></h4>
    <%= link_to "Download #{current_user.name}'s Photo", rails_blob_path(current_user.avatar, disposition: "attachment") %>
  <% end %>
  <h2>User Name: <%= current_user.name %></h2>
  <h2> Email Address: <%= current_user.email %></h2>
  <h4>Locations:</h4>
    <ul>
    <% @locations.each do |location| %>
      <li><%= location.city %>, <%= location.state %> <%= location.country %></li>
    <% end %>
    </ul>
  <h4>Places Liked:</h4>
    <ul>
    <% @places.each do |place| %>
      <li><%= place.name %></li>
    <% end %>
    </ul>
  <a><%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-dark" %></a>
  <a><%= link_to "Change Email or Password", edit_user_registration_path(current_user), class: "btn btn-dark" %></a>
  <a><%= link_to 'Delete', users_path, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></a><br><br>
</div>
