<div class="jumbotron_show">
  <div class="show_map_container">
    <div id="show_map"></div>
  </div>
  <div>
    <h1 class="display-4 text-chicle text-light"><%= @place.name %></h1>
    <h4 class= "text-light"><%= @place.address %></h4>
    <h4 class= "text-light"><%= @place.phone_number %></h4>
    <h4 class= "text-light">Category: <%= @place.category %></h4>
    <h4 class= "text-light">Total Likes Received by Users = <%= @place.likes.count %><%= (@place.likes.count) == 1 ? 'Like' : 'Likes'%></h4>
    <h3 class= "text-light">Likes by Cities</h3>
      <ol>
        <% @likes_by_cities.each do |group| %>
          <li class= "text-light"><%= "#{group[:name]} = #{group[:likes]} Likes" %></li>
        <% end %>
      </ol>
    <h3 class= "text-light">Likes by States</h3>
      <ol>
        <% @likes_by_states.each do |group| %>
          <li class= "text-light"><%= "#{group[:name]} = #{group[:likes]} Likes" %></li>
        <% end %>
      </ol>
    <h3 class= "text-light">Likes by Countries</h3>
      <ol>
        <% @likes_by_countries.each do |group| %>
          <li class= "text-light"><%= "#{group[:name]} = #{group[:likes]} Likes" %></li>
        <% end %>
      </ol>
    <a><%= button_to 'Like', place_likes_path(@place), method: :post, class: "btn btn-success btn-lg" %></a><br><br>
    <!-- <a><%# link_to "Back to Search", root_path, class: "btn btn-dark text-light" %></a> -->
  </div>
  <!-- <div class="map_container">
    <div id="likes_map"></div>
  </div> -->      
</div>
<script>
  var place = <%== {lat: @place.latitude, lng: @place.longitude }.to_json %>;
  
  var map;

  function initMap() {
    map = new google.maps.Map(document.getElementById('show_map'), {
      center: {lat: place.latitude, lng: place.longitude},
      zoom: 20
    });

    var position = new google.maps.LatLng(place.lat, place.lng);
    var marker = new google.maps.Marker({
      position: position,
      map: map
    });

    // places.forEach(function(place) {
