<div class= "container">
  <div class= "card w-50 border-0 float-left">
    <div class= "card-body">
      <h1 class="text-chicle ml-4 mt-4">Add a Restaurant to Food Mapp</h1>
      <%= simple_form_for @place do |f| %>
        <%= f.input :name, label: "Name of Restaurant:" %>
        <%= f.input :address, label: "Restaurant's Address:", placeholder: "123 Street, City, State Zip" %>
        <%= f.input :phone_number, label: "Phone Number:", placeholder: "(555) 555-5555" %>
        <%= f.input :category, label: "Category:", placeholder: "American, Casual, etc." %>
        <a><%= f.button :submit, label: "Add Restaurant", class: "btn btn-danger btn-lg w-50" %></a>
      <% end %>
    </div>
  </div>
  <div class= "card border-0 float-right shadow">
    <div class= "card-body mt-20">
      <%= image_tag "tim-mossholder-678979-unsplash.jpg", size: "500x500" %>
    </div>
  </div>
</div>
